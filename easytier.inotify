#!/system/bin/sh
MODDIR=${0%/*}
now=$(date +"%I:%M %p")

ETPATH=/data/adb/easytierForKSU

events="$1"
monitor_dir="$2"
monitor_file="$3"

service_control() {
  if [ "${monitor_file}" = "disable" ]; then
    echo "${events} - ${monitor_dir} - ${monitor_file}" >>${ETPATH}/inotify.log
    if [ "${events}" = "d" ]; then
      ${MODDIR}/api.sh start >>${ETPATH}/inotify.log
    elif [ "${events}" = "n" ]; then
      ${MODDIR}/api.sh stop >>${ETPATH}/inotify.log
    fi
  fi
}

service_control